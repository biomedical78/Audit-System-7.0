{
  "name": "@auditsystem/enterprise-edition",
  "version": "7.0.0",
  "description": "Enterprise-grade audit management platform for large-scale organizations",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "license": "SEE LICENSE IN LICENSE",
  "author": {
    "name": "Audit System Technologies, Inc.",
    "email": "dev@auditsystem.com",
    "url": "https://www.auditsystem.com"
  },
  "homepage": "https://www.auditsystem.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/biomedical78/Audit-System-7.0.git"
  },
  "bugs": {
    "url": "https://github.com/biomedical78/Audit-System-7.0/issues",
    "email": "support@auditsystem.com"
  },
  "keywords": [
    "audit",
    "compliance",
    "enterprise",
    "risk-management",
    "sox",
    "gdpr",
    "hipaa",
    "security",
    "governance"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "dev:secure": "NODE_ENV=development HTTPS=true nodemon --exec ts-node src/server.ts",
    "build": "tsc && npm run build:assets",
    "build:prod": "NODE_ENV=production tsc && npm run build:assets && npm run optimize",
    "build:assets": "webpack --mode production",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:security": "npm audit && snyk test",
    "test:performance": "k6 run tests/performance/load-test.js",
    "lint": "eslint src/**/*.ts --fix",
    "lint:security": "eslint src/**/*.ts --config .eslintrc.security.js",
    "format": "prettier --write src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "security:check": "npm audit && snyk test && semgrep --config=auto src/",
    "security:scan": "sonarjs-scanner",
    "setup:dev": "npm install && npm run setup:hooks && npm run setup:env",
    "setup:hooks": "husky install",
    "setup:env": "cp .env.example .env.development",
    "db:migrate": "knex migrate:latest",
    "db:seed": "knex seed:run",
    "db:reset": "knex migrate:rollback --all && npm run db:migrate && npm run db:seed",
    "docker:build": "docker build -t audit-system:7.0.0 .",
    "docker:run": "docker run -p 3000:3000 audit-system:7.0.0",
    "k8s:deploy": "kubectl apply -f k8s/",
    "optimize": "npm run optimize:images && npm run optimize:bundle",
    "optimize:images": "imagemin src/assets/images/* --out-dir=dist/assets/images",
    "optimize:bundle": "webpack-bundle-analyzer dist/stats.json",
    "docs:generate": "typedoc src/ --out docs/",
    "docs:api": "swagger-jsdoc -d swagger.config.js src/routes/*.ts -o docs/api.json",
    "compliance:check": "npm run security:check && npm run test && npm run lint:security",
    "release": "semantic-release",
    "precommit": "lint-staged && npm run typecheck && npm run test",
    "prepush": "npm run compliance:check"
  },
  "dependencies": {
    "@types/node": "^20.5.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "passport-saml": "^3.2.4",
    "knex": "^2.5.1",
    "pg": "^8.11.3",
    "redis": "^4.6.8",
    "ioredis": "^5.3.2",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "joi": "^17.9.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "uuid": "^9.0.0",
    "crypto-js": "^4.1.1",
    "node-forge": "^1.3.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.5",
    "pdf-lib": "^1.17.1",
    "xlsx": "^0.18.5",
    "nodemailer": "^6.9.4",
    "bull": "^4.11.3",
    "socket.io": "^4.7.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "express-openapi-validator": "^5.0.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/supertest": "^2.0.12",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/passport": "^1.0.12",
    "@types/passport-jwt": "^3.0.9",
    "@types/passport-local": "^1.0.35",
    "@types/lodash": "^4.14.196",
    "@types/uuid": "^9.0.2",
    "@types/crypto-js": "^4.1.1",
    "@types/multer": "^1.4.7",
    "@types/nodemailer": "^6.4.9",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "typescript": "^5.1.6",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "playwright": "^1.37.1",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-sonarjs": "^0.20.0",
    "prettier": "^3.0.2",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-bundle-analyzer": "^4.9.0",
    "imagemin": "^8.0.1",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-mozjpeg": "^10.0.0",
    "typedoc": "^0.24.8",
    "semantic-release": "^21.0.7",
    "snyk": "^1.1210.0",
    "sonarjs": "^1.0.3",
    "k6": "^0.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "optionalDependencies": {
    "fsevents": "^2.3.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit",
      "pre-push": "npm run prepush",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/types/**/*",
      "!src/**/*.test.{ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "testMatch": [
      "**/__tests__/**/*.{ts,tsx}",
      "**/?(*.)+(spec|test).{ts,tsx}"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "funding": {
    "type": "commercial",
    "url": "https://www.auditsystem.com/pricing"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "snyk": true,
  "security": {
    "advisories": {
      "ignore": []
    }
  }
}
